@model Usuario

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm rounded-3" style="max-width: 400px; width: 100%;">
        <div class="card-header text-center">
            <img src="logo_oficial.png" alt="Logo Oficial" />
        </div>
        <div class="card-body">
            <h3 class="text-center">Login</h3>
            <form method="post" asp-action="Login">
                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" id="UserName" name="UserName" required />
                    <label for="UserName">Usuario</label>
                </div>
                <div class="mb-3 form-floating">
                    <label for="InputPassword">Contraseña</label>
                    <input type="password" class="form-control" id="InputPassword" name="Password" placeholder="Contraseña" required />
                </div>
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <input class="btn btn-primary w-100 py-3 rounded-2" type="submit" value="Iniciar Sesión" />
                </div>
                <p class="text-center text-decoration-none"><a href="#">Olvidaste Tu Contraseña?</a></p>
                <div class="text-danger mt-3">@ViewBag.Error</div>
            </form>
        </div>
    </div>

</div>
